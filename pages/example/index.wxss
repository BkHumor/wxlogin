/* pages/welcome/welcome.wxss */

/**start.wxss**/

page {
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 10pt;
  line-height: 150%;
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.container {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #0099ee;
  align-items: stretch;
  padding: 0;
  height: 100%;
  overflow: hidden;
  justify-content: space-between;
  box-sizing: border-box;
}


.confirm-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #0099ee;
  color: #fff;
  text-align: center;
  border-radius: 100rpx;
  margin: 40% 20%;
}

.confirm-btn text {
  color: #fff;
  font-size: 35rpx;
}

.confirm-btn:active {
  opacity: 0.8;
}

.copyright {
  font-size: 28rpx;
  color: #999;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  text-align: center;
}
.btn {
  position: fixed;
  top: 50%;
  left: 50%;
  margin: auto;
  transform: translate(-50%);
}
